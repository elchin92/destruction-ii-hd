{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
  "name": "destruction-ii",
  "version": "1.0.0",
  "description": "Tactical tank/artillery turn-based game - Modernized for Windows 10/11",
  "homepage": "https://github.com/your-repo/destructionII",
  "license": "Proprietary",
  "supports": "windows & x64",
  "dependencies": [
    {
      "name": "sdl2",
      "version>=": "2.30.0",
      "features": [
        "vulkan"
      ]
    },
    {
      "name": "sdl2-image",
      "version>=": "2.8.0",
      "default-features": true,
      "features": [
        "libjpeg-turbo",
        "libwebp",
        "tiff"
      ]
    },
    {
      "name": "sdl2-mixer",
      "version>=": "2.8.0",
      "default-features": true,
      "features": [
        "libflac",
        "libmodplug",
        "libvorbis",
        "mpg123",
        "opusfile"
      ]
    }
  ],
  "builtin-baseline": "latest"
}
